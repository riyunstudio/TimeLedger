# =============================================================================
# Production Environment Configuration
# Copy this file to .env.production and update all values
# =============================================================================

# =============================================================================
# Application Settings (應用程式設定)
# =============================================================================

APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=Asia/Taipei
APP_ID=1
LOG_LEVEL=info

# =============================================================================
# Server Configuration (伺服器設定)
# =============================================================================

SERVER_NAME=timeLedger
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# =============================================================================
# JWT Configuration (JWT 認證設定)
# =============================================================================

# 生產環境請使用複雜的隨機字串（建議 32 字元以上）
JWT_SECRET=your-production-jwt-secret-at-least-32-characters

# =============================================================================
# MySQL Database Configuration (MySQL 資料庫設定)
# =============================================================================

MYSQL_MASTER_HOST=mysql
MYSQL_MASTER_PORT=3306
MYSQL_MASTER_USER=timeledger
MYSQL_MASTER_PASS=CHANGE_ME_SECURE_PASSWORD
MYSQL_MASTER_NAME=timeledger

MYSQL_SLAVE_HOST=mysql
MYSQL_SLAVE_PORT=3306
MYSQL_SLAVE_USER=timeledger
MYSQL_SLAVE_PASS=CHANGE_ME_SECURE_PASSWORD
MYSQL_SLAVE_NAME=timeledger

# =============================================================================
# Redis Configuration (Redis 快取設定)
# =============================================================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_SECURE_PASSWORD
REDIS_POOLSIZE=100

# =============================================================================
# Telegram Notification (Telegram 通知設定)
# =============================================================================

TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# =============================================================================
# RabbitMQ Message Queue (RabbitMQ 訊息佇列)
# =============================================================================

RABBIT_MQ_ACCOUNT=timeledger
RABBIT_MQ_PASSWORD=CHANGE_ME_SECURE_PASSWORD
RABBIT_MQ_HOST=rabbitmq
RABBIT_MQ_PORT=5672

# =============================================================================
# WebSocket Server (WebSocket 伺服器)
# =============================================================================

WS_SERVER_PORT=8080

# =============================================================================
# LINE Messaging API (LINE 官方帳號設定)
# =============================================================================

LINE_CHANNEL_ID=2009004356
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_CHANNEL_ACCESS_TOKEN=your_line_access_token
LINE_OFFICIAL_ACCOUNT_ID=@your_official_account_id
LIFF_ID=2009043973-1udoR0bZ

# =============================================================================
# Frontend Configuration (前端應用程式設定)
# =============================================================================

FRONTEND_BASE_URL=https://timeledger.tw

# =============================================================================
# Rate Limiting (API 速率限制)
# =============================================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_BLOCK_DURATION=5m

# =============================================================================
# File Upload (檔案上傳設定)
# =============================================================================

UPLOAD_PATH=./uploads
UPLOAD_MAX_SIZE=10
UPLOAD_ALLOWED_EXTS=jpg,jpeg,png,pdf

# =============================================================================
# Cloudflare R2 Storage (Cloudflare R2 雲端儲存)
# =============================================================================

CLOUDFLARE_R2_ENABLED=true
CLOUDFLARE_R2_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_R2_ACCESS_KEY=your_cloudflare_access_key
CLOUDFLARE_R2_SECRET_KEY=your_cloudflare_secret_key
CLOUDFLARE_R2_BUCKET_NAME=timeledger
CLOUDFLARE_R2_PUBLIC_URL=https://files.timeledger.tw
